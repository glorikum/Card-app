<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph.xml"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.oshovenko.cardapp.main.MainFragment"
        android:label="main_fragment"
        tools:layout="@layout/fragment_main" >
        <action
            android:id="@+id/action_mainFragment_to_postcardFragment"
            app:destination="@id/postcardFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim" />
    </fragment>
    <fragment
        android:id="@+id/postcardFragment"
        android:name="com.oshovenko.cardapp.postcard.PostcardFragment"
        android:label="fragment_postcard"
        tools:layout="@layout/fragment_postcard" >
        <argument
            android:name="mainModel"
            app:argType="com.oshovenko.cardapp.main.MainModel" />
    </fragment>
</navigation>